<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"

    android:gravity="start"

    android:background="@android:color/white">


    <!-- Розділювач -->
    <Button
        android:id="@+id/btn_change_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        android:paddingVertical="12dp"
        android:text="Змінити ім'я"
        android:textColor="@android:color/black" />

    <View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="#BDBDBD" />

    <!-- Друга кнопка -->
<Button
android:id="@+id/btn_change_surname"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@android:color/transparent"
android:text="Змінити прізвище"
android:textColor="@android:color/black"
android:paddingVertical="12dp" />

<View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="#BDBDBD" />

    <!-- Третя кнопка -->
<Button
android:id="@+id/btn_change_email"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@android:color/transparent"
android:text="Змінити email"
android:textColor="@android:color/black"
android:paddingVertical="12dp" />

<View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="#BDBDBD" />

    <!-- Четверта кнопка -->
<Button
android:id="@+id/btn_change_password"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@android:color/transparent"
android:text="Змінити пароль"
android:textColor="@android:color/black"
android:paddingVertical="12dp" />

<View
android:layout_width="match_parent"
android:layout_height="1dp"
android:background="#BDBDBD" />


    <Button
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingVertical="12dp"
        android:text="Вийти"
        android:textColor="#D32F2F" />
</LinearLayout>

